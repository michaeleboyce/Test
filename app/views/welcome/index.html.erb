

  <% if user_signed_in? %>
    <div class="form group" id="locationField">
      <input  id="autocomplete" type="text" placeholder="Enter your address" onfocus="geolocate()" class="form-control col-md-7" > 
    </div>
    <form class="form group">
      <div class = "form-group">
        <label for="street_number" class="col-md-2 control-label">Street Number</label>
        <div class="col-md-5">
          <input id="street_number" type="street_number" class="form-control"  placeholder="">
        </div>
      </div>
      <div class= "form-group">
        <label for="locality" class="col-md-2 control-label">City</label>
        <div class="col-md-5">
          <input id="locality" type="locality" class="form-control"  placeholder="">
        </div>
      </div>
      <div class= "form-group">
        <label for="administrative_area_level_1" class="col-md-2 control-label">Governorate</label>
        <div class="col-md-5">
          <input id="administrative_area_level_1" type="administrative_area_level_1" class="form-control"  placeholder="">
        </div>
      </div>
      <div class= "form-group">
        <label for="administrative_area_level_2" class="col-md-2 control-label">District</label>
        <div class="col-md-5">
          <input id="administrative_area_level_2" type="administrative_area_level_2" class="form-control"  placeholder=""> 
        </div>
      </div>
      <div class= "form-group">
        <label for="neighborhood" class="col-md-2 control-label">Neighborhood (if applicable)</label>
        <div class="col-md-5">
          <input id="neighborhood" type="neighborhood" class="form-control" placeholder="">
        </div>
      </div>
      <div class= "form-group">
        <label for="country" class="col-md-2 control-label">Country</label>
        <div class="col-md-5">
          <input id="country" type="country" class="form-control"  placeholder="">
        </div>
      </div>
    </form>
        
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= @api_key %>&libraries=places&callback=initAutocomplete"
        async defer>
    </script>
    <% end %>
